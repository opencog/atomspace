#include <iostream>
#include <fstream>
#include <streambuf>
#include <stdio.h>

#include <opencog/atoms/base/Node.h>
#include <opencog/atomspaceutils/TLB.h>
#include <opencog/atoms/base/atom_types.h>
#include <opencog/util/exceptions.h>

using namespace opencog;
using namespace std;

class TLBUTest :  public CxxTest::TestSuite
{
private:

public:
    TLBUTest() {
    }

    void setUp() {
    }

    void tearDown() {
    }

    void testAdd() {

        TLB tlb;

        NodePtr n(createNode(CONCEPT_NODE, "test"));
        UUID uuid = tlb.addAtom(n, TLB::INVALID_UUID);
        TS_ASSERT(TLB::INVALID_UUID != uuid);

        NodePtr nb(createNode(CONCEPT_NODE, "test"));

        // content-compare should work
        TS_ASSERT( *n == *nb);

        UUID uuidb = tlb.addAtom(nb, TLB::INVALID_UUID);
        printf("expected: %lu got: %lu\n", uuid, uuidb);
        TS_ASSERT(uuidb == uuid);
    }
};
