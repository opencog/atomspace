#include <opencog/cython/PythonEval.h>

using namespace opencog;

class PythonUtilitiesUTest :  public CxxTest::TestSuite
{

public:
    PythonUtilitiesUTest() {}
    ~PythonUtilitiesUTest() {}
    void setUp() {}
    void tearDown() {}

    void testPythonInitnFini()
    {
        // Initialize Python.
        global_python_initialize();

        // Stop Python.
        global_python_finalize();

        // Do it again.
        global_python_initialize();
        global_python_finalize();

        global_python_initialize();
        global_python_finalize();
   }
};
