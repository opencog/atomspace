#include <opencog/util/Logger.h>

#include <cxxtest/TestSuite.h>

using namespace opencog;

#define al _as.add_link
#define an _as.add_node

class SetValueUTest : public CxxTest::TestSuite
{
private:
	AtomSpacePtr _asp;
	SchemeEval* _eval;
	
public:
	SetValueUTest(void);

	void setUp(void);
	void check(void);

	void test_copy();
	void test_square();
	void test_triangle();
	void test_copy_on();
