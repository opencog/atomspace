				N(VARIABLE_NODE, "C")),
			L(EVALUATION_LINK,
				N(VARIABLE_NODE, "A"),
				L(INHERITANCE_LINK,
					N(VARIABLE_NODE, "B"),
					N(VARIABLE_NODE, "C"))));

	printf("Expecting %s\n", expected_putted->to_string().c_str());
	printf("Got %s\n", putted->to_string().c_str());
	TS_ASSERT_EQUALS(putted, expected_putted);

	logger().info("END TEST: %s", __FUNCTION__);
}

