	TS_ASSERT_THROWS_NOTHING(L(QUOTE_LINK,
	                           L(PUT_LINK,
	                             unquoted_vardecl,
	                             unquoted_body,
	                             unquoted_args)));

	logger().info("END TEST: %s", __FUNCTION__);
}
