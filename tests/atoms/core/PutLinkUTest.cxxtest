 *   (VariableNode "x")
 *   (EvaluationLink
 *    (PredicateNode "relation")
 *    (ListLink
 *    (VariableNode "x")
 *     (VariableNode "A"))))
 *  (GetLink
 *   (Inheritance (Variable "$X") (Concept "Parent"))))
 *
 * which should return
 *
 *  (SetLink
 *  (EvaluationLink
 *   (PredicateNode "relation")
 *   (ListLink
 *   (ConceptNode "B")
 *  (VariableNode "A")))
 *  (EvaluationLink
 *   (PredicateNode "relation")
 *   (ListLink
 *    (ConceptNode "C")
 *    (VariableNode "A"))))
*/
void PutLinkUTest::test_get_lambda()
{
	logger().info("BEGIN TEST: %s", __FUNCTION__);

	std::string rs = _eval.eval("(load-from-path \"tests/atoms/core/put-get-lambda.scm\")");
	logger().debug() << "rs = " << rs;

	Instantiator inst(_asp.get());
	Handle put = _eval.eval_h("put-get-lambda"),
		result = HandleCast(inst.execute(put)),
		expected = _eval.eval_h("expected-put-get-lambda");

	logger().debug() << "result = " << oc_to_string(result);
	logger().debug() << "expected = " << oc_to_string(expected);

	TS_ASSERT_EQUALS(result, expected);

	logger().info("END TEST: %s", __FUNCTION__);
}

