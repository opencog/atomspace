		L(LIST_LINK,
			N(CONCEPT_NODE, "junk"),
			N(VARIABLE_NODE, "$x"),
			N(VARIABLE_NODE, "$y"));

	Handle ident =
		L(LAMBDA_LINK,
			N(VARIABLE_NODE, "$x"), N(VARIABLE_NODE, "$x"));

	Handle put =
		L(PUT_LINK, gee,
