#include <opencog/atoms/value/SortedValue.h>
#include <opencog/guile/SchemeEval.h>
#include <opencog/atomspace/AtomSpace.h>
#include <opencog/util/Logger.h>

#include <cxxtest/TestSuite.h>

using namespace opencog;

class SortedValueUTest : public CxxTest::TestSuite
{
private:
	AtomSpacePtr _asp;

public:
	SortedValueUTest(void);

	void setUp(void);
	void test_basic_sorted(void);
};

SortedValueUTest::SortedValueUTest(void)
	: _asp(createAtomSpace())
{
	logger().set_level(Logger::DEBUG);
	logger().set_print_to_stdout_flag(true);
	logger().set_sync_flag(true);
	logger().set_timestamp_flag(false);
}

void SortedValueUTest::setUp(void)
{
}

void SortedValueUTest::test_basic_sorted(void)
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	SchemeEval eval(_asp);

	// Perform numerical compare. The default sort order that's
	// built into Handles will sort this smallest first; so use
	// GreaterThanLink to swap the order.
	ValuePtr sorted_val = eval.eval_v(R"(
		(SortedValue
			(Lambda
				(VariableList (Variable "$A") (Variable "$B"))
				(GreaterThan (Variable "$A") (Variable "$B"))))
	)");

	SortedValuePtr svp = SortedValueCast(sorted_val);
	TS_ASSERT(svp != nullptr);

	// Add numbers in unsorted order: 3, 2, 4
	Handle num3 = eval.eval_h("(Number 3 3 3)");
	Handle num2 = eval.eval_h("(Number 2 2)");
	Handle num4 = eval.eval_h("(Number 4 4 4 4)");

	svp->add(num3);
	svp->add(num2);
	svp->add(num4);

	// Close the SortedValue
	svp->close();

	// Get the sorted contents
	const ValueSeq& contents = svp->value();

	// Verify we got 3 items
	TS_ASSERT_EQUALS(contents.size(), 3);

	// Verify sorted order is 4, 3, 2 (descending)
	TS_ASSERT_EQUALS(contents[0], num4);
	TS_ASSERT_EQUALS(contents[1], num3);
	TS_ASSERT_EQUALS(contents[2], num2);

	// Print the sorted contents
	printf("SortedValue contents (%zu items):\n", contents.size());
	for (size_t i = 0; i < contents.size(); i++)
	{
		printf("  [%zu]: %s\n", i, contents[i]->to_string().c_str());
	}

	logger().debug("END TEST: %s", __FUNCTION__);
}

