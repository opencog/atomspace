void SortedStreamUTest::test_basic_sorted(void)
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	SchemeEval* eval = SchemeEval::get_scheme_evaluator(_asp);

	// Perform numerical compare. The default sort order that's
	// built into Handles will sort this smallest first; so use
	// GreaterThanLink to swap the order.
	ValuePtr sorted_val = eval->eval_v(R"(
		(SortedStream
			(Lambda
				(VariableList (Variable "$A") (Variable "$B"))
				(GreaterThan (Variable "$A") (Variable "$B"))))
	)");

	SortedStreamPtr svp = SortedStreamCast(sorted_val);
	TS_ASSERT(svp != nullptr);

	// Add numbers in unsorted order: 3, 2, 4
	Handle num3 = eval->eval_h("(Number 3 3 3)");
	Handle num2 = eval->eval_h("(Number 2 2)");
	Handle num4 = eval->eval_h("(Number 4 4 4 4)");

	svp->add(num3);
	svp->add(num2);
	svp->add(num4);

	// Close the SortedStream
	svp->close();

	// Remove items one at a time using the new streaming API
	ValuePtr item1 = svp->remove();
	ValuePtr item2 = svp->remove();
	ValuePtr item3 = svp->remove();
	ValuePtr end_marker = svp->remove();

	// Verify we got 3 items plus VoidValue end marker
	TS_ASSERT(item1 != nullptr);
	TS_ASSERT(item2 != nullptr);
	TS_ASSERT(item3 != nullptr);
	TS_ASSERT(end_marker->is_type(VOID_VALUE));

	// Verify sorted order is 4, 3, 2 (descending)
	TS_ASSERT_EQUALS(item1, num4);
	TS_ASSERT_EQUALS(item2, num3);
	TS_ASSERT_EQUALS(item3, num2);

	// Print the sorted contents
	printf("SortedStream contents (3 items):\n");
	printf("  [0]: %s\n", item1->to_string().c_str());
	printf("  [1]: %s\n", item2->to_string().c_str());
	printf("  [2]: %s\n", item3->to_string().c_str());

	logger().debug("END TEST: %s", __FUNCTION__);
}

