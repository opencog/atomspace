void SortedStreamUTest::test_deduplication(void)
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	SchemeEval eval(_asp);

	// Use bare GreaterThan for descending sort
	ValuePtr sorted_val = eval.eval_v(R"(
		(SortedStream (GreaterThan))
	)");

	SortedStreamPtr svp = SortedStreamCast(sorted_val);
	TS_ASSERT(svp != nullptr);

	ValuePtr num2 = eval.eval_v("(FloatValue 2 2)");
	ValuePtr num3 = eval.eval_v("(FloatValue 3 3 3)");
	ValuePtr num4 = eval.eval_v("(FloatValue 4 4 4 4)");
	ValuePtr num5 = eval.eval_v("(FloatValue 5 5 5 5 5)");
	ValuePtr num6 = eval.eval_v("(FloatValue 6)");
	ValuePtr voiv = eval.eval_v("(VoidValue)");

	// Add 12 items in "random" order.
	svp->add(num2);
	svp->add(num6);
	svp->add(num3);
	svp->add(num5);
	svp->add(num4);
	svp->add(num5); // duplicate
	svp->add(num5); // duplicate
	svp->add(num3); // duplicate
	svp->add(num2); // duplicate
	svp->add(num6); // duplicate
	svp->add(num4); // duplicate
	svp->add(num5); // duplicate
	svp->add(voiv); // closes stream

	const ValueSeq& contents = svp->value();

	// Deduplication works just like UnisetValue:
	// should have only 5 unique items
	TS_ASSERT_EQUALS(contents.size(), 5);

	// Verify sorted order is 6, 5, 4, 3, 2 (descending)
	TS_ASSERT_EQUALS(contents[0], num6);
	TS_ASSERT_EQUALS(contents[1], num5);
	TS_ASSERT_EQUALS(contents[2], num4);
	TS_ASSERT_EQUALS(contents[3], num3);
	TS_ASSERT_EQUALS(contents[4], num2);

	printf("SortedStream contents (%zu items, should be 5):\n", contents.size());
	for (size_t i = 0; i < contents.size(); i++)
		printf("  [%zu]: %s\n", i, contents[i]->to_string().c_str());

	logger().debug("END TEST: %s", __FUNCTION__);
}

