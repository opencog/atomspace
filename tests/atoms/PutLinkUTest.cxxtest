class PutLinkUTest :  public CxxTest::TestSuite
{
private:
	AtomSpace _as;

public:
	PutLinkUTest()
	{
		logger().set_print_to_stdout_flag(true);
	}

	void setUp() {}

	void tearDown() {}

	void test_define();
