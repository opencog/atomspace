/*
 * Same as test_unary_get(), test_binary_get(), test_get_ill_typed(),
 * and test_free_bound() except that the variable decls are embedded.
 */
void MeetLinkUTest::test_embed_vardels(void)
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	as->clear();
	eval->eval("(load-from-path \"tests/query/meet-link-embed.scm\")");

	ValuePtr vgnd = eval->eval_v("(cog-execute! is-human)");
	ValuePtr vans = eval->eval_v(
		"(LinkValue (ConceptNode \"Ben\") (ConceptNode \"Linas\"))");

	printf("Expected this: %s\n", vans->to_string().c_str());
	printf("Found this answer: %s\n", vgnd->to_string().c_str());

	TSM_ASSERT("Didn't get the expected grounding", *vans == *vgnd);

	// ----------------------
	vgnd = eval->eval_v("(cog-execute! is-something)");

#define REVERSE 1
#if REVERSE
	// Oh dear ... the embedded declarations end up unordered, which
	// hoses the Meetlink we are testing. Whatever, hack around this.
	vans = eval->eval_v(
		"(UnisetValue "
		"(LinkValue (ConceptNode \"human\") (ConceptNode \"Ben\"))"
		"(LinkValue (ConceptNode \"human\") (ConceptNode \"Linas\"))"
		"(LinkValue (ConceptNode \"dog\") (ConceptNode \"Sparky\")))");
#else
	vans = eval->eval_v(
		"(UnisetValue "
		"(LinkValue (ConceptNode \"Ben\") (ConceptNode \"human\"))"
		"(LinkValue (ConceptNode \"Linas\") (ConceptNode \"human\"))"
		"(LinkValue (ConceptNode \"Sparky\") (ConceptNode \"dog\")))");
#endif

	printf("Expected this: %s\n", vans->to_string().c_str());
	printf("Found this answer: %s\n", vgnd->to_string().c_str());

	TSM_ASSERT("Didn't get the expected grounding", *vans == *vgnd);

	// ----------------------
	vgnd = eval->eval_v("(cog-execute! is-nothing)");
	vans = eval->eval_v("(LinkValue)");

	printf("Expected this: %s\n", vans->to_string().c_str());
	printf("Found this answer: %s\n", vgnd->to_string().c_str());

	TSM_ASSERT("Didn't get the expected grounding", *vans == *vgnd);

	// ----------------------
	vgnd = eval->eval_v("(cog-execute! g-take-contain)");

	// 32-bit and 64-bit hashes differ because std::hash() returns size_t
	// As a result, the order is randomly reversed. Hack around this
	// inconsistency. Also: the hash depends on the the number of types
	// that appear before SetLink, because the type number is hashed in.
	// Thus, changing the type hierarchy changes the hash. So, to make
	// this work, we look for either answer.
	ValuePtr vans1 = eval->eval_v(
		"(LinkValue "
		"(LinkValue (ConceptNode \"compound-A\") (ConceptNode \"John\")))");
	ValuePtr vans2 = eval->eval_v(
		"(LinkValue "
		"(LinkValue (ConceptNode \"John\") (ConceptNode \"compound-A\")))");

	printf("Expected this: %s\n", vans1->to_string().c_str());
	printf("or maybe this: %s\n", vans2->to_string().c_str());
	printf("Found this answer: %s\n", vgnd->to_string().c_str());

	TSM_ASSERT("Didn't get the expected grounding",
		(*vans1 == *vgnd) or (*vans2 == *vgnd));

	logger().debug("END TEST: %s", __FUNCTION__);
}

